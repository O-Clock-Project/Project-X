{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('css/reset.css') }}" rel="stylesheet">
    <link href="{{ asset('css/style.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    
    {% for message in app.flashes('notice') %}
        <div class="flash-notice alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div id="login">
      
        <h1 id="login-title">The Hub</h1>
        <h2 id="login-subtitle">Connexion</h2>

        <form id="login-form" action="{{ path('login') }}" method="post" autocomplete="off">
            
            <input class="login-form-input" type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Username" />

           
            <input class="login-form-input" type="password" id="password" name="_password" placeholder="Mot de passe" />

            <button class="login-form-btn" type="submit">Se connecter</button>
        </form>
    </div>

{% endblock %}