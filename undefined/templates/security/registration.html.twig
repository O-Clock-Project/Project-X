{% extends 'base.html.twig' %}

{% block title %}Mail d'inscription{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('css/reset.css') }}" rel="stylesheet">
    <link href="{{ asset('css/style.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}

    <div id="signup">
        <img id= "signup-title-logo" src=" {{ asset('images/logo_bold_jaune.png') }} ">
        <h2 id="signup-subtitle">Pré'Inscription des éléves</h2>
        
        <form "{{ path("sendEmailRegistration")}}" method="POST" id="signup-form" action="" autocomplete="off">
            
            <div class="signup-form-category">
                <label class="signup-form-label" for="email">Email</label>
                <textarea class="signup-form-input" id="email" name="email">
                </textarea>
            </div>

            <div class="signup-form-category">
                
                <label class="signup-form-label" for="promotion">Promotion</label>
                <select class="signup-form-input" type="select" id="Promotion" name="Promotion">
                {% for promotion in promotions %} 
                    <option value={{ promotion.name|e}}>{{ promotion.name|e}}</option> 
                {% endfor %}
                </select> 
            </div>
            <button type="submit" class="signup-form-btn">Envoyer</button>
        </form> 
        
    
    </div>

{% endblock %}